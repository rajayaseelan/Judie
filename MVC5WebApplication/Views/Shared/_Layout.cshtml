<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JUDIE CONSTRUCTIONS Pvt. Ltd.</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/toastr.css")

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />

    @Scripts.Render("~/bundles/modernizr") 
    @Scripts.Render("~/Scripts/jquery-1.8.2.min.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.3.js")
    @Scripts.Render("~/Scripts/knockout-2.3.0.js")
    @Scripts.Render("~/Scripts/json_eval.js")
    @Scripts.Render("~/Scripts/toastr.js")
    @Scripts.Render("~/Scripts/linq.js")

    @Scripts.Render("~/Scripts/MVC5WebApplication.js")
    @Scripts.Render("~/Scripts/jquery.blockUI.js")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(".", "Index", "Home", null, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        @*<li>@Html.ActionLink("Articles", "Contact", "Home")</li>*@
                        <li>@Html.ActionLink("Create Customer", "CustomerMaintenance", "Customers")</li>
                        <li>@Html.ActionLink("Customer Search", "CustomerInquiry", "Customers")</li>
                        @*<li>@Html.ActionLink("Seed Data", "SeedData", "SeedData")</li>*@
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - JUDIE CONSTRUCTIONS Pvt. Ltd.</p>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
